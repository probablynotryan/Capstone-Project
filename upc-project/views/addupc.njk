{% extends layout %}


{% block content %}
<h4>Congrats! You found something that hasn't been entered!</h3>
<h5>Tell us more about what you scanned:</h4>
  <form class="form-login" method="POST" action="/add_new_u">
      <label for="upc_value">UPC Number: </label>
      <input name="upc_value" class="form-control" id="upc_value" value={{upc_value}} disabled />
      <label for="og_founder">Discoverer (You): </label>
      <input name="og_founder" class="form-control" id="og_founder" value={% if user %}{{user}}{% else %}"error"{% endif %} disabled />
      <label for="stuff">Item Name</label>
      <input type="text" name:"item_name" id="item_name" class="form-control" name="password" placeholder="Name of Item"/>
      <label for="brand_name">Brand Name </label>
      <input type="text" name:"brand_name" id="brand_name" class="form-control" placeholder="ex: Pepsi, Hasbro" />
      <label for="item_size">Size of Item </label>
      <input type="text" name:"item_size" id="item_size" class="form-control" placeholder="ex: fl oz, 100 ea, etc.." />
      <button class="btn btn-sm btn-primary btn-block" type="submit">Enter Item</button>
  </form>
{% endblock %}