{% extends layout %}


{% block content %}
<!DOCTYPE html>
<html lang="en">
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="css/index.css">
  <title>UPC [In Development]</title>
</head>
<body class="bg-black">
  <form class="form-login" method="POST" action="/scan-try">
      <input name="scan_value" class="form-control" placeholder="UPC Value" required autofocus />
      <button class="fancy-button" type="submit">Scan it.</button>
  </form>
  {% if name_of_item %}
  <p style="color:grey">
    <a href="/item_details/{{id_num}}"> {{name_of_item}}</a> has already been discovered by {{og_founder}}! Try again.
  </p>
  {% endif %}
</body>
</html>
{% endblock %}